#!/usr/bin/env bash

function usage() {
  cat <<EOU
Shortcuts for restic backups

books     backup for ~/Dropbox/Books
apps      backup /Applications and /Library (about 180Gb)

EOU
 exit
}

# no args default to usage
[[ -z ${1} ]] && usage

case ${1} in
  books)
    sudo -E restic backup --verbose ${HOME}/Dropbox/Books
  ;;
  apps)
    sudo -E restic backup --one-file-system --verbose /Applications /Library
  ;;
  *)
    usage
  ;;
esac

